<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VideoFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent">
        <TextView
            android:id="@+id/videos_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Videos"
            android:textAlignment="center"
            android:fontFamily="@font/abhaya_libre_bold"
            android:textColor="@color/sky_blue"
            android:textSize="45sp"
            android:textStyle="bold" />
        <View
            android:id="@+id/videos_divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/videos_header"
            android:background="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/rview"
            android:layout_below="@id/videos_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/news_list"
            />
        <TextView
            android:id="@+id/noVideosTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_centerInParent="true"
            android:text="@string/noVideoNews"
            android:visibility="gone"
            />

    </RelativeLayout>

</layout>